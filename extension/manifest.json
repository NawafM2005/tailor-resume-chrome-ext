{
  "manifest_version": 3,
  "name": "Resume Tailor",
  "version": "1.0",
  "description": "Extract job description and generate tailored PDF resume.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
